<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   	android:background="@drawable/logistic"
   >
	
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
           >

<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:paddingTop="100dp"
			android:id="@+id/clientLinear"
				android:gravity="center"
		>
		
    
	<ImageView 
	    android:src="@drawable/client"
	    android:contentDescription="@string/ImgDesc"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    
	    />
        
     <Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/lsitClient"
				android:id="@+id/ListClient"/>
	<Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/ListOperation"
				android:id="@+id/ListlientOperation"/>
	
    <ListView
        android:id="@+id/listclient"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:layout_gravity="left"
      />
</LinearLayout>
	
   
        
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="100dp"
	android:orientation="vertical"
	android:id="@+id/chauffeurLinear"
		android:gravity="center"
	>	
	
	<ImageView 
	    android:src="@drawable/driver"
	    android:contentDescription="@string/ImgDesc"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    
	    />
	<Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/ListChauffeurDispo"
				android:id="@+id/ListChauffeur"/>
	<Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/ListChauffeurIndispo"
				android:id="@+id/ListChauffeurCamion"/>
	
	<ListView
        android:id="@+id/listChauffeur"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:layout_gravity="left"
      />
</LinearLayout>
        

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/CamionLinear"
	  android:paddingTop="100dp"
       	android:gravity="center"
	>
	
    
	<ImageView 
	    android:src="@drawable/camion"
	    android:contentDescription="@string/ImgDesc"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    
	    />
	<Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/ListCamionDispo"
				android:id="@+id/ListCamion"/>
	<Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/ListCamionIndispo"
				android:id="@+id/TypeCamion"/>
	
	<Button
				android:layout_width="fill_parent"
				android:textColor="#FF00FF00"
				android:layout_height="wrap_content"
				android:text="@string/lsitCamionCarte"
				android:id="@+id/TypeCamionCarte"/>
	
	
	
	<ListView
        android:id="@+id/listCamionview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="10dp"
        android:layout_gravity="left"
      />
	</LinearLayout>  


		     
		     
		     
		     
	<LinearLayout
	    android:id="@+id/editClient"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:paddingTop="100dp"
		android:gravity="center_vertical"
	>
	
	    <Button
				android:layout_width="200dp"
				android:textColor="#FFFF0000"
				android:layout_height="wrap_content"
				android:text="@string/newOperation"
				android:id="@+id/EditAll"/>
	    
		<Button
				android:layout_width="200dp"
				android:textColor="#FFFF0000"
				android:layout_height="wrap_content"
				android:text="@string/mapOption"
				android:id="@+id/MapOperation"/>
		</LinearLayout>
	

        </FrameLayout>
          
</TabHost>

</LinearLayout>